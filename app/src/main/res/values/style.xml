<resources>
    <style name="CustomDialog" parent="android:style/Theme.Dialog">
<!--        <item name="android:windowBackground">@android:color/transparent</item>-->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
<!--        <item name="android:windowIsFloating">true</item>-->
<!--        <item name="android:backgroundDimEnabled">true</item>-->
        <item name="android:gravity">center</item>
        <item name="buttonBarPositiveButtonStyle">@style/customDialogPositiveBtnStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/CustomDialogNegativeBtnStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/customDialogNeutralBtnStyle</item>
    </style>

    <style name="customDialogPositiveBtnStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/primary</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="CustomDialogNegativeBtnStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/primary</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="customDialogNeutralBtnStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/grey</item>
        <item name="android:padding">5dp</item>
    </style>
</resources>